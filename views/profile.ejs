<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=user.name  %> Profile</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="stylesheets/profile.css">
    
</head>
<body>

    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a href="/logout" class="bg-red-500 rounded-md px-3 py-2 text-white text-sm mb-5 inline-block"> logout</a>
        </div>

        <div class="flex items-start gap-5"> 
            <div class="image">
                <a href="/profile/upload"><img src="images/uploads/<%=user.profilepic %>" alt="" class="w-full h-full object-cover rounded-md overflow-hidden"> </a>
                
            </div>
            <h3 class="text-3xl mb-5"> <span class="font-bold">Hello</span>, <%=user.name %> ðŸ‘‹ </h3>
            
        </div>

       <!-- <form action="/login" method="post">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800 " type="email" placeholder="email" name="email">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800 " type="password" placeholder="password" name="password">

            <input type="submit" value="Login" class="bg-blue-500 px-5 py-2 rounded-md">
        </form> -->

        <h5 class="mb-5 mt-3">You can create a post</h5>

        <form action="/post" method="post">
            <textarea placeholder="write what's in your mind..." name="content" class="block p-3 w-1/3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md"></textarea>
            <input type="submit" value="POST" class=" block px-3 py-2 bg-blue-500 rounded-md mt-2 w-40">
        </form>

        <div class="posts mt-20">
            <h3 class="text-2xl text-zinc-300">Your Post's</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    
                    <div class="w-1/3 p-4 border-2 mb-4 border-zinc-800 rounded-md">
                        <h4 class="text-blue-500 mb-2"><%=user.username  %></h4>
                        <p class="text-sm tracking-tight"><%=post.content  %></p>
                        
                        <small class="mt-4 inline-block"><%=post.likes.length  %> likes</small>

                        <div class="btns flex gap-5">
                            <a href="/likes/<%=post._id %>" class="text-blue-500 ">
                                <%=post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                            </a>
                            <a href="/edit/<%=post._id %>" class="text-zinc-600 ">edit</a>
                        </div>
                    
                    </div>

                <% }) %>
            </div>

        </div>


    </div>
    
</body>
</html>